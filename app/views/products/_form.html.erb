<%= link_to '<- Back', products_path, class: 'btn btn-warning'%>
<div class="text-center"><%= type.capitalize %> Product</div>
<div class="container" style="width: 50%; background-color: #444; border-radius: 20px; padding: 20px; margin-top: 20px;">
  <%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title , class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description , class: 'form-control'%>
    </div>
    <div class="">
      <%= f.label :category_id %><br />
      <%= f.select :category_id, Category.pluck(:name) , prompt: "Select Category", class: 'form-control', selected: f.object.category.try(:name) %>
    </div>
    <div class="form-group">
      <%= f.label :image_url %>
      <%= f.text_field :image_url , class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price , class: 'form-control'%>
    </div>
    <div class="actions">
      <%= f.submit "#{type} Product", class: 'btn btn-success', style: "width: 100%;"%>
    </div>
  <% end %>
</div>
