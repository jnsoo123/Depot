<!DOCTYPE html>
<html>
<head>
  <title>Store</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body id="base">
  
  
  
  <div id = "header" class="container-fluid">
    <nav class="navbar navbar-static-top">
      <ul class="nav navbar-nav">
        <li><%= link_to 'My Cart Project', store_path, class: 'navbar-brand' %></li>
        <li><%= link_to 'Home', store_path %></li>
        <li><a href="#">Questions</a></li>
        <li><a href="#">News</a></li>
        <li><a href="#">Contact Us</a></li>
      </ul>
      <% if user_signed_in? %>
        <%= button_to 'Logout', logout_path, method: :delete, class: 'btn btn-danger pull-right', style: 'margin-left: 5px;' %>
        <%= link_to "<i class='glyphicon glyphicon-user'></i> ".html_safe+current_user.name, admin_path, class: 'btn btn-success pull-right' %>
        
      <% else %>
        <%= button_to 'Login', login_path, method: :get, class: 'btn btn-primary pull-right' %>
      <% end %>
    </nav>
  </div>

  
  <div id="body" class="container">
    <div class="row">
      <% if @cart %>
        <div class="col-md-3">
          <div id="cart" style="position: ;">
            <%= render @cart %>
          </div>
        </div>
      <% end %>

      <div class="<%= @cart ? 'col-md-9' : 'col-md-12' %>">
         <%= yield %>
      </div>


    </div>
  </div>
  
  <footer class="footer" style="height: 50px; width: 100%">
    
  </footer>
  
</body>
</html>
